<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:uicui="clr-namespace:Uzi.Ikosa.Client.UI" 
                    xmlns:icontract="clr-namespace:Uzi.Ikosa.Contracts;assembly=Uzi.Ikosa.Contracts"
                    xmlns:ccontract="clr-namespace:Uzi.Core.Contracts;assembly=Uzi.Core.Contracts"
                    xmlns:pvm="clr-namespace:Uzi.Ikosa.Proxy.ViewModel;assembly=Uzi.Ikosa.Proxy"
                    xmlns:cis="clr-namespace:Uzi.Ikosa.Proxy.IkosaSvc;assembly=Uzi.Ikosa.Proxy"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Uzi.Ikosa.Client.UI;Component/Deltable.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type pvm:ContentStack}">
        <ItemsControl ItemsSource="{Binding Path=Contents}" VerticalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="{Binding Path=Orientation}"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </DataTemplate>

    <!-- TextBlock Label -->
    <Style TargetType="TextBlock" x:Key="styleLabel">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,2,0"/>
    </Style>

    <!-- STACKPANEL STYLE -->
    <Style TargetType="StackPanel" x:Key="styleItemPanel">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="#00000000"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="LightGreen"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="DockPanel" x:Key="styleItemDockPanel">
        <Setter Property="Margin" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="LightGreen"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Label" x:Key="styleILLabel">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="styleILTextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Spell Trigger Info -->
    <DataTemplate DataType="{x:Type icontract:SpellTriggerInfo}">
        <StackPanel>
            <ContentControl Content="{Binding SpellSource}"></ContentControl>
            <TextBlock><Run Text="Charges/Use: "/><Run Text="{Binding ChargesPerUse}"/></TextBlock>
            <TextBlock><Run Text="Charges: "/><Run Text="{Binding ChargesRemaining}"/></TextBlock>
        </StackPanel>
    </DataTemplate>
    
    <!-- Spell Source Info -->
    <DataTemplate DataType="{x:Type icontract:SpellSourceInfo}">
        <StackPanel>
            <TextBlock xml:space="preserve"><Run Text="{Binding Path=SpellDef.Message}" FontStyle="Italic"/></TextBlock>
            <TextBlock xml:space="preserve"><Run Text="Caster Level: " /><Run Text="{Binding Path=CasterLevel}" /></TextBlock>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type icontract:MagicPowerSourceInfo}">
        <TextBlock FontStyle="Italic">
            <Run Text="{Binding Path=Message}" />
            <Run Text="(" ></Run>
            <Run Text="{Binding Path=CasterLevel}" />
            <Run Text=")" ></Run>
        </TextBlock>
    </DataTemplate>

    <!-- INFO -->
    <DataTemplate DataType="{x:Type ccontract:Info}">
        <TextBlock Text="{Binding Path=Message}" FontStyle="Italic"/>
    </DataTemplate>

    <!-- Description -->
    <DataTemplate DataType="{x:Type ccontract:Description}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=Message}" FontStyle="Italic"/>
            <ItemsControl ItemsSource="{Binding Path=Descriptions}" BorderBrush="Black" BorderThickness="0.25">
            </ItemsControl>
        </StackPanel>
    </DataTemplate>

    <!-- ADJUNCT INFO Set (for use in other templates) -->
    <DataTemplate x:Key="tmplAdjunctInfos">
        <ItemsControl ItemsSource="{Binding Path=AdjunctInfos}"></ItemsControl>
    </DataTemplate>

    <!-- WEAPON HEAD -->
    <ResourceDictionary x:Key="rdWeaponHeadSub">
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/Uzi.Ikosa.Client.UI;Component/Deltable.xaml"/>
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    <DataTemplate DataType="{x:Type icontract:WeaponHeadInfo}" Resources="{StaticResource rdWeaponHeadSub}">
        <Grid Margin="2,0">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="ContentControl">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="ItemsControl">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="0">Combat</TextBlock>
            <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="1">Material</TextBlock>
            <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="2" Visibility="{Binding Path=AdjunctVisibility}">Extra Info</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=CombatSummary}"/>
            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=Material.Name}"/>
            <ContentControl Grid.Column="1" Grid.Row="2" Visibility="{Binding Path=AdjunctVisibility}"
                            Content="{Binding}" ContentTemplate="{StaticResource tmplAdjunctInfos}" >
            </ContentControl>
        </Grid>
    </DataTemplate>

    <!-- DOUBLE WEAPON -->
    <DataTemplate DataType="{x:Type icontract:DoubleMeleeWeaponInfo}">
        <StackPanel Orientation="Horizontal" ToolTipService.ShowDuration="30000" Style="{StaticResource styleItemPanel}">
            <StackPanel.Resources>
                <Style BasedOn="{StaticResource styleILTextBlock}" TargetType="TextBlock"/>
                <Style BasedOn="{StaticResource styleILLabel}" TargetType="Label"/>
            </StackPanel.Resources>
            <StackPanel.ToolTip>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="0">Summary</TextBlock>
                    <!--<TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="4">Using as Two Handed</TextBlock>-->
                    <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="5">Weapon Heads</TextBlock>
                    <TextBlock Style="{StaticResource styleLabel}" Grid.Column="0" Grid.Row="6" Visibility="{Binding Path=AdjunctVisibility}">Extra Info</TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=WieldSummary}"/>
                    <!--<TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding Path=UseAsTwoHanded}"/>-->
                    <Border Grid.Column="1" Grid.Row="5" BorderThickness="0.5" BorderBrush="Brown">
                        <ItemsControl ItemsSource="{Binding Path=WeaponHeads}" Margin="2">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Border>
                    <ContentControl Grid.Column="1" Grid.Row="6" Visibility="{Binding Path=AdjunctVisibility}"
                            Content="{Binding}" ContentTemplate="{StaticResource tmplAdjunctInfos}" >
                    </ContentControl>
                </Grid>
            </StackPanel.ToolTip>
            <uicui:ImageryIcon Width="64" Height="64" ImageryInfo="{Binding Path=Icon}" IconResolver="{Binding Path=IconResolver}"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="4,0,2,0">
                <TextBlock Text="{Binding Path=Message}"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock xml:space="preserve"><Run Text="{Binding Path=Size.Name}"/><Run Text=" ("/><Run FontStyle="Italic" Text="{Binding Path=CreatureSize.Name}"/><Run Text=") "/></TextBlock>
                    <TextBlock Visibility="{Binding Path=WeightVisibility}"><Run Text="{Binding Path=Weight}"/><Run Text="#"/></TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

