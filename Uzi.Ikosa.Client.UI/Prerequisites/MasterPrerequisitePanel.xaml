<UserControl x:Class="Uzi.Ikosa.Client.UI.MasterPrerequisitePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:uicui="clr-namespace:Uzi.Ikosa.Client.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="72"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <uicui:MasterPrerequisiteList HorizontalAlignment="Stretch" Grid.Row="0" VerticalAlignment="Stretch"
                                          x:Name="lstPrerequisites" 
                                          DataContext="{Binding Path=Items}" />
            <Button Margin="2" Content="Send" HorizontalAlignment="Left" Grid.Row="1"
                    Visibility="{Binding Path=SendButtonVisibility}" 
                    Command="{Binding Path=PrerequisiteProxy.DoSendPrerequisites}"/>
    </Grid>
</UserControl>
