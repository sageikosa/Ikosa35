<UserControl x:Class="Uzi.Ikosa.Client.UI.PrerequisitePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:uicui="clr-namespace:Uzi.Ikosa.Client.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer Visibility="{Binding Path=Visibility}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
        <ScrollViewer.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="72"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel Orientation="Vertical" >
            <uicui:PrerequisiteList x:Name="lstPrerequisites" DataContext="{Binding Path=Items}" />
            <Button Margin="2" Content="Send" 
                    Visibility="{Binding Path=SendButtonVisibility}" 
                    Command="{Binding Path=PrerequisiteProxy.DoSendPrerequisites}"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
