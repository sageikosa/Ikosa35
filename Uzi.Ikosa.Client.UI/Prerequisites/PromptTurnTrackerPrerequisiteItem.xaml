<UserControl x:Class="Uzi.Ikosa.Client.UI.PromptTurnTrackerPrerequisiteItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uzi.Ikosa.Client.UI"
             xmlns:ccontract="clr-namespace:Uzi.Core.Contracts;assembly=Uzi.Core.Contracts"
             Background="{Binding Path=Background}"
             mc:Ignorable="d" >
    <Grid Margin="2">
        <StackPanel >
            <TextBlock Text="Turn Tracker" Background="LightCyan" />
            <Button Content="No" 
                    Margin="4"
                    Padding="8,2"
                    ToolTip="{Binding Path=Description}"
                    Focusable="False" 
                    Click="Button_Click" 
                    Tag="{Binding}"/>
        </StackPanel>
    </Grid>
</UserControl>
