<UserControl x:Class="Uzi.Ikosa.Workshop.Adjuncts.SearchableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Uzi.Ikosa.UI;Component/Deltable.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" Margin="4,1">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </StackPanel.Resources>
        <TextBlock xml:space="preserve" Text="Searchable: Difficulty= "/>
        <ContentControl Content="{Binding Path=Difficulty}" VerticalAlignment="Center"
                        ContentTemplate="{StaticResource deltaEdit}"></ContentControl>
    </StackPanel>
</UserControl>
