<Window x:Class="Uzi.Ikosa.Workshop.RenameKey"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterOwner"
    Title="Rename Key" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Name"/>
        <TextBox MinWidth="96" Margin="2" x:Name="txtName"/>
        <StackPanel Margin="0,2,0,2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="OK" Margin="2" MinWidth="48" IsDefault="True" x:Name="btnOK" Click="btnOK_Click"/>
            <Button Content="Cancel" Margin="2" MinWidth="48" IsCancel="True" x:Name="btnCancel" Click="btnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
