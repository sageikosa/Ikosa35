<Window x:Class="Uzi.Ikosa.Workshop.PaletteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#00000000"
        Topmost="True" AllowsTransparency="True" WindowStyle="None" SizeToContent="WidthAndHeight">
    <Border CornerRadius="4" Background="#80B0B0B0">
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="Blue" CornerRadius="4,0,0,0" MouseLeftButtonDown="brdChrome_MouseLeftButtonDown" x:Name="brdChrome">
                <DockPanel>
                    <Button DockPanel.Dock="Right" IsCancel="True" x:Name="btnClose" Click="btnClose_Click">
                        <Canvas Width="8" Height="8">
                            <Line X1="0" Y1="0" X2="8" Y2="8" Stroke="Red" />
                            <Line X1="0" Y1="8" X2="8" Y2="0" Stroke="Red" />
                        </Canvas>
                    </Button>
                    <TextBlock x:Name="txtTitle" Text="Palette" Foreground="White" Margin="4,1"/>
                </DockPanel>
            </Border>
            <Grid x:Name="gridPlaceHolder"/>
        </DockPanel>
    </Border>
</Window>    
