<Window x:Class="Uzi.Ikosa.Workshop.NewReference"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterOwner"
        Title="New Reference" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Window.CommandBindings>
        <CommandBinding x:Name="cbSave" Command="Save" CanExecute="cbSave_CanExecute" Executed="cbSave_Executed"/>
    </Window.CommandBindings>
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=txtName}">
        <Label Content="Name"/>
        <TextBox MinWidth="96" Margin="2" x:Name="txtName"/>
        <StackPanel Margin="0,2,0,2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="OK" Margin="2" MinWidth="48" IsDefault="True" x:Name="btnOK" Command="Save"/>
            <Button Content="Cancel" Margin="2" MinWidth="48" IsCancel="True" x:Name="btnCancel" Click="btnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
