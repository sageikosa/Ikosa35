<Window x:Class="WpfApplication1.ModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ht="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Background="#FF006060"
        Title="ModelWindow" Height="300" Width="300">
    <ht:HelixViewport3D ViewCubeBackText="L" ViewCubeFrontText="R" ViewCubeLeftText="B" ViewCubeRightText="F"
                            ShowCoordinateSystem="True">
        <ht:GridLinesVisual3D Length="20" Width="20" MajorDistance="5" MinorDistance="1" />
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <AmbientLight Color="White"/>
            </ModelVisual3D.Content>
        </ModelVisual3D>
        <ModelVisual3D>
            <!--<ModelVisual3D.Transform>
                <ScaleTransform3D ScaleX="0.7" ScaleY="0.05" ScaleZ="1.5"/>
            </ModelVisual3D.Transform>-->
            <ModelVisual3D.Content>
                <Model3DGroup x:Name="m3grpSet">
                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </ht:HelixViewport3D>
</Window>
